{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Tweak",
			"command": "zsh",
			"args": [
				"-c",
				"rm -rf packages && gmake clean package"
			],
			"problemMatcher": {
				"owner": "cpp",
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				"close": true
			}
		},
		{
			"type": "shell",
			"label": "AirDrop Tweak",
			"command": "zsh",
			"args": [
				"-c",
				"shortcuts run 'AirDrop' -i ./packages/*.deb"
			],
			"presentation": {
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				"close": true
			},
			"dependsOn": ["Build Tweak"]
		},
		{
			"type": "shell",
			"label": "Build IPA",
			"command": "chmod +x build-local.sh && ./build-local.sh",
			"presentation": {
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				"reveal": "always"
			}
		}
	]
}